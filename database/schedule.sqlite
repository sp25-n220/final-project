-- Scheduling table
CREATE TABLE schedules (
  id INTEGER PRIMARY KEY AUTOINCREMENT,
  festival_id INTEGER NOT NULL,
  event_name TEXT NOT NULL,
  start_time DATETIME,
  end_time DATETIME,
  FOREIGN KEY(festival_id) REFERENCES festivals(id)
);



